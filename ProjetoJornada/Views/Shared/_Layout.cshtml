@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="~/img/icons8-taça-de-sorvete-96.png">
</head>
<body>


    <!-- cabeçalho  -->
    <header>

        <nav class="lista_nav">
            <a href="/Home"><img src="~/img/nav.png" alt="" class="icon_logo"></a>
            <ul>
                <li> <a class="ancora_nav" href="/Home">Home</a> </li>
                <li> <a class="ancora_nav" href="/Home/Catalogo">Catálogo</a></li>
                <li> <a class="ancora_nav" href="/Home/Sobre">Sobre</a></li>



                @if (Context.Session.GetString("cliente") != null)
                {
                    <li>

                        <a class="btn btn-primary" asp-controller="Usuario" asp-action="Deslogar2" id="btn_deslogar_nav">Deslogar</a>

                    </li>
                }
                else
                {
                    <li> <a href="" id="btn_login_nav" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Login</a></li>
                }

            </ul>


            <a asp-controller="Usuario" asp-action="Carrinho"><img src="~/img/carrinho.png" class="icon_carrinho"></a>

            @if (Context.Session.GetString("cliente") != null)
            {

                <a href="/Usuario/Cliente"><img src="~/img/usuario.png" class="icon_carrinho"></a>

            }



        </nav>

    </header>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">


        <form class="form_login" method="post" asp-controller="Usuario" asp-action="Logar">

            <div id="titulo">
                <h1 id="titulo_login">Login</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div id="entrada">

                <h2 class="subtitulo_login">Usuario</h2>
                <input name="nomeUsuario" type="text" class="input_login">
                <h2 class="subtitulo_login">Senha</h2>
                <input name="senha" type="password" class="input_login">

            </div>
            <div class="opcoes">
                <a href="">&lt- Voltar para a home</a>
                <a id="esquecisenha" href="/Home/SenhaPerdida">Esqueci minha senha</a>
            </div>
            <button type="submit" value="Logar" class="button_login">Entrar</button>

            <div id="link">
                <p>Não possui um login?</p>

                <a id="home" href="/Home/Cadastro">Fazer cadastro...</a>

            </div>
        </form>
        <div class="modal-dialog">

        </div>
    </div>


    <br><br>



    @RenderBody()


    <br><br><br>
    <footer>
        <div class="conteudo_footer">

            <div class="textos_rodape">

                <img src="~/img/rodape.png" alt="" class="icon_logo_rodape">

                <div class="info_rodape">
                    <p>politica de privacidade </p>
                    <p>Formas de pagamento <br> pix </p>
                    <p>Entre em contato <br>Av. da Saudade, Ponte Preta, Campinas <br>número: 125  <br>tel: 19 99453087 <br> apocalipse.vegan@contato.com </p>
                </div>

            </div>

            <div class="logos_rodape">

                <div class="icon_rodape_grupo1">
                    <a href=""><img src="~/img/icon-facebook.png"></a>
                    <a href=""><img src="~/img/icons-insta.png"></a>
                    <a href=""><img src="~/img/icons-email.png"></a>
                </div>


                <div class="espaco-rodape"></div>
                <div class="icon_rodape_grupo2">
                    <a href=""><img src="~/img/pix.png"></a>
                </div>


                <div class="espaco-rodape"></div>


                <div class="rodape3">

                    <div class="icon_rodape_grupo3">
                        <a href=""><img src="~/img/locao.png"></a>
                        <a href=""><img src="~/img/telefone.png"></a>
                        <a href=""><img src="~/img/icon-loja.png"></a>
                    </div>
                </div>
            </div>
        </div>

        <p class="creditos">Termos de Uso | As imagens exibidas são meramente ilustrativas | Todos os direitos reservados ao QUARTETO | Desenvolvido por: cavaleiros do apocalipse </p>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
